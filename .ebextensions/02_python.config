container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python manage.py createsu"
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "Chanterelle.settings"
    "PYTHONPATH": "/opt/python/current/app/Chanterelle:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "Chanterelle/Chanterelle/wsgi.py"
    NumProcesses: 3
    NumThreads: 20
    diff -Naur elasticbeanstalk.old/hooks/config.py elasticbeanstalk/hooks/config.py
    --- elasticbeanstalk.old/hooks/config.py        2012-08-17 18:00:19.000000000 +0200
    +++ elasticbeanstalk/hooks/config.py    2012-08-29 13:20:23.644257212 +0200
    @@ -34,6 +34,7 @@
      WSGIPythonHome /opt/python/run/baselinenv
      WSGISocketPrefix run/wsgi
      WSGIRestrictEmbedded On
      +WSGIPassAuthorization %s

      <VirtualHost *:%s>
    @@ -62,6 +63,7 @@
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "api/static/"
